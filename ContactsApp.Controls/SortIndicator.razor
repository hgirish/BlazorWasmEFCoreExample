@using ContactsApp.Model
@inject IContactFilters Filters 

@if (Column == Filters.SortColumn)
{
    <span>@Indicator</span>
}
else
{
    <span>&nbsp;</span>
}

@code {

    /// <summary>
    /// Sets which <see cref="ContactFilterColumns"/> this indicator is for.
    /// </summary>
    [Parameter]
    public ContactFilterColumns Column { get; set; }

    /// <summary>
    /// Show the sort direction.
    /// </summary>
    public string Indicator => Filters.SortAscending ? "🔼" : "🔽";
}
